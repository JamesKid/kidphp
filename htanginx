rewrite ^/([0-9]+)/$ /$1.html  permanent;
rewrite ^/([0-9]+).html$  /index.php/article/detail?articleId=$1 last;

#rewrite ^/article/detail?article_id=([0-9]+)$ /article/$1 permanent;


