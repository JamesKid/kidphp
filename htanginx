# 关于我们节点重写
rewrite ^/about.html /about/index last;
rewrite ^/index.html /index/index last;
# 文章节点重写
rewrite ^/([0-9]+)$ /$1.html  permanent;
rewrite ^/([0-9]+)/$ /$1.html  permanent;
rewrite ^/([0-9]+).html$  /index.php/article/detail?articleId=$1 last;

# 目录vim基本使用
rewrite ^/vimuse/$ /vimuse  permanent;
rewrite ^/vimuse$  /list/subcategory?category=vim_basic_usage last;

# 目录vim插件
rewrite ^/vimplugin/$ /vimplugin  permanent;
rewrite ^/vimplugin$  /list/subcategory?category=vim_plugin last;

# 目录vim配置
rewrite ^/vimconfig/$ /vimconfig  permanent;
rewrite ^/vimconfig$  /list/subcategory?category=vim_config last;

# 目录vim学习tips
rewrite ^/vimlearn/$ /vimlearn  permanent;
rewrite ^/vimlearn$  /list/subcategory?category=vim_learn_tips last;

# 目录vim手册解读
rewrite ^/vimmanual/$ /vimmanual  permanent;
rewrite ^/vimmanual$  /list/subcategory?category=vim_manual last;

# 目录新闻
rewrite ^/news/$ /news  permanent;
rewrite ^/news$  /list/category?category=news last;

# 其他内容
rewrite ^/math/$ /math  permanent;
rewrite ^/math$  /list/othercategory?category=math last;

#rewrite ^/article/detail?article_id=([0-9]+)$ /article/$1 permanent;

rewrite ^/test/$ /test permanent;
rewrite ^/test$  /index.php/article/test last;

if (!-e $request_filename){
    rewrite ^/(.*)$ /$1 last;
    break;
}
